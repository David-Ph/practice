    }
  },
  "servers": [
    {
      "url": "http://{{environment}}.programmerzamannow.com/api/v1",
      "description": "Todolist restful api",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "server envionrment",
          "enum": ["Dev", "qa", "prod"]
        }
      }
    }
  ],
  "paths": {
    "/todolist": {
      "get": {
        "summary": "Get All Todolist",
        "description": "only will return active todolist",
        "responses": {
          "default": {
            "description": "GET TODOLIST"
          }
        },
        "parameters": [
          {
            "name": "include_done",
            "description": "include done todo list",
            "required": false,
            "in": "query"
          },
          {
            "name": "name",
            "description": "filter by name",
            "required": false,
            "in": "query"
          }
        ]
      },
      "post": {
        "summary": "post a todolist",
        "description": "create new active todolist",
        "responses": {
          "default": {
            "description": "POST TODOLIST"
          }
        }
      }
    },
    "/todolist/{todolistId}": {
      "delete": {
        "summary": "delete todolist",
        "description": "delete a todo",
        "parameters": [
          {
            "name": "todolistId",
            "description": "todolistid for deleted",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "default": {
            "description": "DELETE TODOLIST"
          }
        }
      },
      "put": {
        "responses": {
          "default": {
            "description": "PUT TODOLIST"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Youtube programmer zaman now",
    "url": "https://www.youtube.com/"
  }
}
