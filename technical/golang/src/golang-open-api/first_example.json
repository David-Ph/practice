{
  "openapi": "3.0.3",
  "info": {
    "title": "Golang OpenAPI",
    "version": "1.0.0",
    "description": "OpenAPI Learning",
    "termsOfService": "https://maomao.com",
    "contact": {
      "name": "MaoMao",
      "email": "MaoMao@gmail.com",
      "url": "https://www.maomao.com/"
    },
    "license": {
      "name": "apache 2.0",
      "url": "https://apache.org"
    }
  },
  "servers": [
    {
      "url": "http://{{environment}}.programmerzamannow.com/api/v1",
      "description": "Todolist restful api",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "server envionrment",
          "enum": ["Dev", "qa", "prod"]
        }
      }
    }
  ],
  "paths": {
    "/todolist": {
      "get": {
        "summary": "Get All Todolist",
        "description": "only will return active todolist",
        "responses": {
          "default": {
            "description": "GET TODOLIST"
          },
          "200": {
            "description": "GET TODOLIST SUCCESS",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "todolist id",
                        "nullable": false
                      },
                      "name": {
                        "type": "string",
                        "description": "todolist name",
                        "nullable": false
                      },
                      "priority": {
                        "type": "integer",
                        "description": "todolist priority",
                        "nullable": false
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "include_done",
            "description": "include done todo list",
            "required": false,
            "in": "query",
            "schema": {
              "default": "",
              "type": "string",
              "nullable": true
            },
            "examples": {
              "java": {
                "value": "Java"
              },
              "php": {
                "value": "PHP"
              }
            }
          },
          {
            "name": "name",
            "description": "filter by name",
            "required": false,
            "in": "query",
            "schema": {
              "default": "",
              "type": "string",
              "maxLength": 100,
              "minLength": 0
            }
          }
        ]
      },
      "post": {
        "summary": "post a todolist",
        "description": "create new active todolist",
        "responses": {
          "default": {
            "description": "POST TODOLIST"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": ["true"],
                    "minLength": 1
                  },
                  "priority": {
                    "type": "integer",
                    "required": ["true"],
                    "minimum": 1
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              },
              "examples": {
                "java": {
                  "value": {
                    "name": "Belajar pemrograman java",
                    "tags": ["java", "belajar"],
                    "priority": 3
                  }
                },
                "php": {
                  "value": {
                    "name": "Belajar pemrograman php",
                    "tags": ["php", "belajar"],
                    "priority": 3
                  }
                }
              }
            }
          },
          "required": true
        }
      }
    },
    "/todolist/{todolistId}": {
      "delete": {
        "summary": "delete todolist",
        "description": "delete a todo",
        "parameters": [
          {
            "name": "todolistId",
            "description": "todolistid for deleted",
            "in": "path",
            "required": true,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "default": {
            "description": "DELETE TODOLIST"
          }
        }
      },
      "put": {
        "responses": {
          "default": {
            "description": "PUT TODOLIST"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Youtube programmer zaman now",
    "url": "https://www.youtube.com/"
  }
}
