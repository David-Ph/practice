{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "outDir": "./",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.tsx",
    "./**/*.ts",
    "./src/**/*.ts",
    "src/__tests__",
    "./src/**/*"
  ]
}
